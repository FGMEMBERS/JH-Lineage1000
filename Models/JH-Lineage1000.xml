	<!-- Fuselage, Wings, Tail, Engines, ... -->
	<model>
		<name>Aircraft</name>
		<path>Aircraft/JH-Lineage1000/Models/Outside/Outside.xml</path>
	</model>

	<animation>
		<type>material</type>
		<object-name>fuselage</object-name>
		<object-name>winglet.l</object-name>
		<object-name>winglet.r</object-name>
		<object-name>rudder</object-name>
		<object-name>geardoor.b.l</object-name>
		<object-name>geardoor.b.r</object-name>
		<object-name>geardoor.f.l</object-name>
		<object-name>geardoor.f.r</object-name>
		<object-name>reverser</object-name>
		<object-name>nacelle</object-name>
		<object-name>door.l1</object-name>
		<object-name>door.l2</object-name>
		<object-name>door.r1</object-name>
		<object-name>door.r2</object-name>
		<object-name>vstab</object-name>
		<property-base>sim/model/livery</property-base>
		<texture-prop>texture</texture-prop>
		<texture>Embraer190.png</texture>
	</animation>

	<!-- Interior Cabin -->
	<model>
		<name>Cabin</name>
	    	<path>Aircraft/JH-Lineage1000/Models/Cabin/Cabin.xml</path>
	</model>

	<!-- Flightdeck -->
	<model>
		<name>Flightdeck</name>
		<path>Aircraft/JH-Lineage1000/Models/Flightdeck/Flightdeck.xml</path>
		<offsets>
			<x-m>-2</x-m>
		</offsets>
	</model>

	<!-- Deployable Stairs -->
	<model>
		<name>Stairs</name>
		<path>Aircraft/JH-Lineage1000/Models/Stairs/Stairs.xml</path>
	</model>

	<!-- Ram Air Turbine -->
	<model>
		<name>RAT</name>
		<path>Aircraft/VIP/Models/Lineage1000/RAT.xml</path>
		<offsets>
			<x-m>2.0</x-m>
			<y-m>0</y-m>
			<z-m>-1.768</z-m>
		</offsets>
	</model>

	<!-- Other non-aircraft models -->
	<!-- Airport operations -->

	<model>
		<name>Pushback</name>
		<path>Aircraft/JH-Lineage1000/Models/Airport/Services/Goldhofert.xml</path>
		<offsets>
			<x-m>-16.4</x-m>
			<y-m>0</y-m>
			<z-m>-2.27</z-m>
		</offsets>
	</model>

	<model>
		<name>Followme</name>
		<path>Aircraft/JH-Lineage1000/Models/Airport/Services/followme.ac</path>
		<condition>
			<and>
				<!-- #### better with ground speed and weight on wheels ? #### -->
				<equals>
					<property>controls/switches/followme</property>
					<value type="bool">true</value>
				</equals>
				<less-than>
					<property>velocities/airspeed-kt</property>
					<value>80</value>
				</less-than>
			</and>
		</condition>   
		<offsets>
			<x-m>-16.0</x-m>
			<y-m>0.00</y-m>
			<z-m>0.00</z-m>
		</offsets>
	</model>

